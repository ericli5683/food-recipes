generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum RecipeSource {
  LOCAL
  ONLINE_IMPORTED
}

model Recipe {
  id            String       @id @default(cuid())
  title         String
  description   String?
  ingredients   String[]
  instructions  String
  imageUrl      String?
  source        RecipeSource @default(LOCAL)
  externalUrl   String?
  searchableText String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([createdAt])
  @@index([searchableText])
}
